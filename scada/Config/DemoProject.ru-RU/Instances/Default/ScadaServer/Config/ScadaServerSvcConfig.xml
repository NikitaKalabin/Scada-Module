  <CommonParams>
    <Param name="TcpPort" value="10000" descr="Номер TCP-порта" />
    <Param name="UseAD" value="false" descr="Использовать Active Directory для аутентификации пользователей" />
    <Param name="LdapPath" value="LDAP://server" descr="Путь к серверу контроллера домена" />
    <Param name="DetailedLog" value="false" descr="Записывать в журнал приложения подробную информацию" />
  </CommonParams>
  <!--Директории-->
  <Directories>
    <Param name="BaseDATDir" value="C:\SCADA\BaseDAT\" descr="Директория базы конфигурации в формате DAT" />
    <Param name="ItfDir" value="C:\SCADA\Interface\" descr="Директория интерфейса" />
    <Param name="ArcDir" value="C:\SCADA\ArchiveDAT\" descr="Директория архива в формате DAT" />
    <Param name="ArcCopyDir" value="C:\SCADA\ArchiveDATCopy\" descr="Директория копии архива в формате DAT" />
  </Directories>
  <!--Параметры записи-->
  <SaveParams>
    <Param name="WriteCurPer" value="1" descr="Период записи текущего среза, с" />
